<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/act_anim</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="common_line_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
    </style>

    <style name="common_line" parent="common_line_base">
        <item name="android:background">@color/color_common_line</item>
    </style>

    <style name="prt_split_line" parent="common_line_base">
        <item name="android:background">@color/color_prt_gray_line</item>
    </style>

    <style name="vertical_line">
        <item name="android:layout_width">0.8dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_common_line</item>
    </style>

    <style name="common_line_dark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_common_line_dark</item>
    </style>

    <style name="vertical_line_dark">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_common_line_dark</item>
    </style>

    <style name="courseTableText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="courseTableContentText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="tips_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground"> @android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="centerDialogAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/window_enter</item>
        <item name="android:windowExitAnimation">@anim/window_exit</item>
    </style>

    <style name="stu_school_roll_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">#fff</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="padding_15_12">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>


    <style name="common_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_btn_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="common_btn_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="row_horizontal_lyt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingLeft">@dimen/row_horizontal_lyt_paddingLeft</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="recharge_money_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="common_edtview">
        <item name="android:background">@drawable/login_edt_shap</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_editview_height</item>
        <item name="android:layout_marginTop">@dimen/login_edt_padding</item>
        <item name="android:layout_marginLeft">@dimen/login_edt_padding</item>
        <item name="android:layout_marginRight">@dimen/login_edt_padding</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>